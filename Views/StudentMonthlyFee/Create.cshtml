@model HostelManagementSystem.Data.StudentMonthlyFee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create">
    <div class="row">
        <div class="col-lg-6 mb-2">
            <label class="control-label">Month</label>
            <input type="text" asp-for="Month" class="form-control" data-inputmask-alias="datetime" id="datemask" data-inputmask-inputformat="mm/yyyy" data-mask>

        </div>
        <div class="col-lg-6 mb-2">
            <label class="control-label">Admission Fee</label>
            <input type="number" asp-for="AdmissionFee" class="form-control" placeholder="floor">
        </div>
        <div class="col-lg-6 mb-2">
            <label class="control-label">Room Fee</label>
            <input type="number" asp-for="Fee" class="form-control" placeholder="floor">
        </div>
         <div class="col-lg-6 mb-2">
            <label class="control-label">Student Name</label>
            <select class="form-control" asp-for="StudentId" asp-items="ViewBag.Student" required>
                <option value="0">all</option>
            </select>
        </div>
    </div>
    <input type="submit" value="submit" />
</form>
<script src="~/plugins/moment/moment.min.js"></script>

<script src="~/plugins/inputmask/jquery.inputmask.min.js"></script>

<script>
    $('#datemask').inputmask('mm/yyyy', { 'placeholder': 'mm/yyyy' })
</script>
