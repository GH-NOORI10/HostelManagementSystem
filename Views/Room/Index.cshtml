@model IList<HostelManagementSystem.Data.Room>
@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Bordered Table</h3>
                        <br />
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <a class="btn btn-info text-sm-left" href="/Room/Create">Add Room</a>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                <th>Room No</th>
                <th>RoomType</th>
                <th>RoomStatus</th>
                <th>Floor</th>
                <th>Action</th>
            </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
            {
                                <tr>
                                        <td>@item.RoomNo</td>
                                        <td>@item.RoomType</td>
                                        <td>@item.RoomStatus</td>
                                        <td>@item.Floor.FloorLocation</td>

                                        <td>
                                            <a class="btn btn-success btn-sm" href="/Room/Edit/@item.Id">Edit</a>
                                            <a class="btn btn-danger btn-sm" onclick="deletead(@item.Id)">Delete</a>
                                        </td>
                                </tr>
                              }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- /.card -->
            </div>
            </div>
         
    </div><!-- /.container-fluid -->
</section>

<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery/jquery.slim.min.js"></script>
<script src="~/plugins/jquery/jquery.slim.js"></script>
<script src="~/plugins/jquery/jquery.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.0/sweetalert2.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.0/sweetalert2.min.js"></script>

<script>
    var dsd=$('#dsf').val();
 

        function deletead (val){
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
         if (result.isConfirmed) {
            
                $.post("/Room/Delete/" + val,function(data){
                    if(data=="success")
                    {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                    location.reload();
                    }
                    else{
                        Swal.fire(
                            'Not Deleted!',
                            data,
                            'error'
                        )
                    }
                })
           
        
            }
        })
    }

   
</script>

